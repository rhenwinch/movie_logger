<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movie_logger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_700</item>
        <item name="colorPrimaryVariant">@color/blue_grey_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status/Nav bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Theme.NoWiredStrapInNavigationBar" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/blue_grey_500</item>
        <item name="android:statusBarColor">@color/blue_grey_500</item>
    </style>
</resources>