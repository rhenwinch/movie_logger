<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Home Calendar De/Selected Colors  -->
    <style name="HorizontalCalendar" />

    <style name="HorizontalCalendar.SelectedDayNumber">
        <item name="android:fontFamily">@string/font_black</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="HorizontalCalendar.SelectedDayWord">
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="HorizontalCalendar.DeselectedDayNumber">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="HorizontalCalendar.DeselectedDayWord">
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="page_title">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#DEFFFFFF</item>
    </style>

    <!-- Bottom Nav Bar -->
    <style name="Theme.Movie_logger.BottomAppBar" parent="Theme.Movie_logger">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.BottomNavBar" parent="">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
    </style>

    <!-- CARDS -->
    <style name="HomeCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/HomeCardViewCustomCorners</item>
    </style>

    <style name="HomeCardViewCustomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <!-- Search Bottom Sheet Card View -->
    <style name="SearchCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/SearchCardViewCustomCorners</item>
    </style>

    <style name="SearchCardViewCustomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">65dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Bottom Sheet Card View -->
    <style name="BottomSheetCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/BottomSheetCardViewCustomCorners</item>
    </style>

    <style name="BottomSheetCardViewCustomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorSecondaryLight</item>
        <item name="colorControlActivated">@color/colorSecondaryLight</item>
    </style>

    <!-- Time/Duration Icon Style -->
    <style name="DurationIcon">
        <item name="android:src">@drawable/time</item>
        <item name="android:contentDescription">Movie Duration</item>
    </style>

    <!-- Time/Duration Icon Style -->
    <style name="PersonIcon">
        <item name="android:src">@drawable/person</item>
        <item name="android:contentDescription">Person</item>
    </style>

    <!-- AddToWatchlist icon -->
    <style name="AddIcon">
        <item name="android:src">@drawable/plus</item>
        <item name="android:contentDescription">@string/add</item>
    </style>

    <!-- Bottom Sheet Drag icon -->
    <style name="DragIcon">
        <item name="android:src">@drawable/dragger</item>
        <item name="android:contentDescription">DragIcon</item>
    </style>

    <!-- Profile picture placeholder icon -->
    <style name="ProfilePicturePlaceholderIcon">
        <item name="android:src">@drawable/profile_placeholder</item>
        <item name="android:contentDescription">ProfilePicturePlaceholder</item>
    </style>
</resources>