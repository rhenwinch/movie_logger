<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="25dp"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/viewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="644dp"
        android:fontFamily="@string/font_medium"
        android:letterSpacing="0.22"
        android:text="view"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeSmallest"
        app:layout_constraintEnd_toStartOf="@+id/allTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/allTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" all"
        android:fontFamily="@string/font_light"
        android:textSize="@dimen/textSizeSmallest"
        android:textAllCaps="true"
        android:letterSpacing="0.22"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/viewTextView"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>