<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginBottom="22dp"
    android:columnCount="2">

    <TextView
        android:id="@+id/recentlyAddedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginTop="12dp"
        android:fontFamily="@string/font_medium"
        android:text="@string/recently_added"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/textSizeFragmentHeaders" />

    <include
        android:id="@+id/viewAllRecentlyAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_columnWeight="1"
        android:layout_gravity="bottom|end"
        layout="@layout/view_all"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentlyAddedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_columnSpan="2"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_media_small" />

</GridLayout>