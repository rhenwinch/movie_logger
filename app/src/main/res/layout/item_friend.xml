<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="65dp"
        app:cardElevation="25dp"
        app:strokeColor="@color/colorSecondaryDark"
        app:strokeWidth="@dimen/dp2">

        <ImageView
            android:id="@+id/friendProfileImage"
            android:layout_width="@dimen/userProfileCardSmall"
            android:layout_height="@dimen/userProfileCardSmall"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/friendUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@string/font_light"
        android:textColor="@color/colorOnMediumEmphasis"
        android:textSize="@dimen/textSizeBody"
        tools:text="Tom Timothy Holland" />

</LinearLayout>