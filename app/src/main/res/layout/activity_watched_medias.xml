<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.watched_list.WatchedMediasActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/watchlistToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:elevation="2dp"
        android:backgroundTint="@color/transparent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:menu="@menu/search_sort_menu"
        app:navigationIcon="@drawable/left_arrow_2"
        app:navigationIconTint="@color/colorOnMediumEmphasis">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_black"
            android:text="@string/ratings"
            android:textAppearance="@style/page_title" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/dynamicBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.7"
        tools:background="@color/colorSecondary"/>

    <TextView
        android:id="@+id/emptyListIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/empty_watched_list_message"
        android:textSize="@dimen/textSizeFragmentHeaders"
        android:textColor="@color/colorOnMediumEmphasis" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/watchedListDataContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottomNavBarHeight"
            android:background="@drawable/item_movie_overlay_single">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/watchedMediaViewPager"
                android:layout_width="match_parent"
                android:layout_height="518dp"
                android:layout_marginTop="?attr/actionBarSize" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:dotsColor="@color/colorOnMediumEmphasis"
                app:dotsCornerRadius="8dp"
                app:dotsSize="5dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:selectedDotColor="@color/colorSecondary"
                app:progressMode="false"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/watchedMediaMovieDurationIcon"
                    android:layout_width="9dp"
                    android:layout_height="13dp"
                    android:src="@drawable/time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/watchedMediaMovieDuration"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/watchedMediaMovieDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@string/font_light"
                    tools:text="@string/sample_duration"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="@dimen/textSizeSmallest"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/watchedMediaMovieDurationIcon"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/watchedMediaMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/font_medium"
                tools:text="@string/sample_title"
                android:textAlignment="center"
                android:textColor="@color/colorOnPrimary"
                android:textSize="@dimen/textSizeMovieHeader_24sp" />

            <RatingBar
                android:id="@+id/watchedMediaMovieRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:numStars="5"
                android:stepSize="0.1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                tools:rating="4.5"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/watchedMediaWatchedOnLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@string/font_light"
                    android:text="@string/watched_on"
                    android:textAlignment="center"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="@dimen/textSizeSmallest" />

                <TextView
                    android:id="@+id/watchedMediaWatchedOnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_light"
                    tools:text="@string/sample_date"
                    android:textAlignment="center"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="@dimen/textSizeSmallest" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>