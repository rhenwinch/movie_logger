<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".presentation.movie_details.trailer_dialog.TrailerDialog">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seekBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:backgroundTint="#40000000"
        android:clickable="true"
        android:elevation="1dp"
        android:rotationY="180"
        android:visibility="gone"
        app:cardCornerRadius="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/rewind" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/seekBackwardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:scaleX="0"
        android:scaleY="0"
        tools:text="-5"
        android:textColor="@color/colorOnPrimary"
        android:translationX="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seekBackward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seekForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#40000000"
        android:clickable="true"
        android:elevation="1dp"
        android:visibility="gone"
        app:cardCornerRadius="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/rewind" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/seekForwardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:scaleX="0"
        android:scaleY="0"
        tools:text="+5"
        android:textColor="@color/colorOnPrimary"
        android:translationX="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/seekForward"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xcape.movie_logger.presentation.components.custom_components.CustomStyledPlayerView
        android:id="@+id/trailerCustomPlayerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:played_color="@color/colorSecondary"
        app:scrubber_color="@color/colorSecondaryDark"
        app:show_buffering="when_playing"
        app:show_shuffle_button="false" />

</androidx.constraintlayout.widget.ConstraintLayout>