<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@id/profileCardView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/colorOnMediumEmphasis"
                    app:cardCornerRadius="65dp"
                    app:cardElevation="26dp"
                    app:strokeColor="@color/colorSecondaryDark"
                    app:strokeWidth="@dimen/dp2">

                    <ImageView
                        android:id="@id/profilePicture"
                        style="@style/ProfilePicturePlaceholderIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_black"
                        android:maxLines="1"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="15sp"
                        tools:text="rhenwinch" />

                    <TextView
                        android:id="@+id/postedOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_light"
                        android:maxLines="1"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="13sp"
                        tools:text="5 mins ago with ameifire, toery, etc." />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mediaImageCard"
                    android:layout_width="84dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/mediaImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/movieimage"
                        android:foreground="@drawable/item_movie_overlay_light"
                        android:scaleType="fitXY"
                        android:src="@drawable/spoderman" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/frameLayout"
                    app:layout_constraintStart_toEndOf="@+id/mediaImageCard"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/mediaTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_regular"
                        android:maxLines="3"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="15sp"
                        tools:text="Django (2012)" />

                    <RatingBar
                        android:id="@+id/mediaRating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="4.5"
                        android:theme="@style/RatingBar" />

                    <TextView
                        android:id="@+id/userReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_light"
                        android:maxLines="2"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="13sp"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec maximus nunc vehicula fermentum ornare. Sed non purus facilisis, vehicula quam in, molestie leo. Pellentesque quis pellentesque elit, eu aliquam massa." />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/likesCountRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="@dimen/dp5">

<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginEnd="5dp"-->
<!--                    android:src="@drawable/heart"-->
<!--                    android:scaleX="0.6"-->
<!--                    android:scaleY="0.6"-->
<!--                    app:tint="@color/colorOnError" />-->

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_medium"
                    android:maxLines="1"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="13sp"
                    tools:text="5 likes" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1" />

            <ImageView
                android:id="@+id/userPhoto"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:scaleType="centerCrop"
                android:src="@drawable/spoderman" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

                <LinearLayout
                    android:id="@+id/likeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/likeButtonDrawable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp7"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/no_fill_heart" />

                    <TextView
                        android:id="@+id/likeButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@string/font_medium"
                        android:text="@string/like"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rateButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/rateButtonDrawable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp7"
                        android:src="@drawable/star_2"
                        android:scaleX="0.8"
                        android:scaleY="0.8"  />

                    <TextView
                        android:id="@+id/rateButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@string/font_medium"
                        android:text="@string/rate_this"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/watchlistButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/watchlistButtonDrawable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp7"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/bordered_plus" />

                    <TextView
                        android:id="@+id/watchlistButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@string/font_medium"
                        android:text="@string/watch_list"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="13sp" />

                </LinearLayout>

            </GridLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>