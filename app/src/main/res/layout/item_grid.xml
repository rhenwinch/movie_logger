<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    >

    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="9dp"
        android:elevation="5dp"
        android:src="@drawable/item_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:elevation="10dp"
        android:src="@drawable/item_star"
        app:layout_constraintEnd_toStartOf="@id/movieRating"
        app:layout_constraintStart_toStartOf="@id/ratingIcon"
        app:layout_constraintTop_toTopOf="@id/ratingIcon"
        app:layout_constraintBottom_toBottomOf="@id/ratingIcon" />

    <TextView
        android:id="@+id/movieRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:textColor="?attr/colorOnPrimary"
        android:text="1.5"
        android:fontFamily="@string/font_medium"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/starIcon"
        app:layout_constraintTop_toTopOf="@id/ratingIcon"
        app:layout_constraintEnd_toEndOf="@id/ratingIcon"
        app:layout_constraintBottom_toBottomOf="@id/ratingIcon" />


    <androidx.cardview.widget.CardView
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/movieImage"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:adjustViewBounds="true"
                    android:foreground="@drawable/item_overlay" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="35dp"
                    android:layout_gravity="bottom"
                    android:columnCount="2"
                    android:rowCount="2"
                    >

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center|top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_movie" />

                    <TextView
                        android:id="@+id/movieTitle"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/sample_item"
                        android:textColor="?attr/colorOnPrimary"
                        android:fontFamily="@string/font_medium"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center|top"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/item_duration" />

                    <TextView
                        android:id="@+id/movieDuration"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/sample_item"
                        android:textColor="?attr/colorOnPrimary"
                        android:fontFamily="@string/font_light"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center|top"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/item_cast" />

                    <TextView
                        android:id="@+id/movieCast"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/sample_item"
                        android:textColor="?attr/colorOnPrimary"
                        android:fontFamily="@string/font_light"
                        android:textSize="12sp" />

                </GridLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

