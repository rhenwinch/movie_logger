<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/placeholderPagerStart"
        android:layout_width="295dp"
        android:layout_height="255dp"
        android:layout_gravity="center|left"
        android:backgroundTint="@color/placeholder"
        android:scaleY="0.9"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/placeholderPagerCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/placeholderPagerCenter"
        android:layout_width="295dp"
        android:layout_height="255dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="34dp"
        android:backgroundTint="@color/placeholder"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/placeholderPagerEnd"
        app:layout_constraintStart_toEndOf="@id/placeholderPagerStart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/placeholderPagerEnd"
        android:layout_width="295dp"
        android:layout_height="255dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/placeholder"
        android:scaleY="0.9"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/placeholderPagerCenter"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>