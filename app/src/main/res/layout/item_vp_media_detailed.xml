<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mediaCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mediaImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:foreground="@drawable/item_movie_overlay_labeled_black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spoderman" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginBottom="35dp"
                    android:layout_gravity="bottom"
                    android:columnCount="2"
                    android:rowCount="2">

                    <ImageView
                        android:layout_gravity="center|top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/movie" />

                    <TextView
                        android:id="@+id/mediaTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="@dimen/dp5"
                        android:fontFamily="@string/font_medium"
                        android:text="@string/sample_title"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_marginTop="@dimen/dp2"
                        android:layout_gravity="center|top"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/time" />

                    <TextView
                        android:id="@+id/mediaDuration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="24dp"
                        android:text="@string/sample_duration"
                        android:textColor="?attr/colorOnPrimary"
                        android:fontFamily="@string/font_light"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_marginTop="@dimen/dp2"
                        android:layout_gravity="center|top"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/star" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mediaRatingImdb"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:text="@string/sample_imdbrating"
                            android:textColor="?attr/colorOnPrimary"
                            android:fontFamily="@string/font_light"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginTop="@dimen/dp2"
                            android:src="@drawable/imdb_icon" />

                    </LinearLayout>

                </GridLayout>
            </FrameLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>