<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom_sheet">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:src="@drawable/dragger" />

    <LinearLayout
        android:id="@+id/addToWatchedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            app:tint="@color/colorOnMediumEmphasis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/check_as_watched"
            android:fontFamily="@string/font_regular"
            android:textColor="@color/colorOnMediumEmphasis"
            android:textSize="@dimen/textSizeFragmentHeaders"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:id="@+id/deleteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            app:tint="@color/colorOnMediumEmphasis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/delete_from_list"
            android:fontFamily="@string/font_regular"
            android:textColor="@color/colorOnMediumEmphasis"
            android:textSize="@dimen/textSizeFragmentHeaders"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp" />

</LinearLayout>