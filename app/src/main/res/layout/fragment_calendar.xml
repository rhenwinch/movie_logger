<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragment.CalendarFragment">

    <!-- Calendar Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calendarDateButton"
        android:layout_width="162dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/transparent"
        android:clickable="true"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/colorOnMediumEmphasis"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/calendarDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_black"
                android:text="@string/sample_date"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/calendarDateEllipse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/calendarDateEllipse"
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/calendarDate"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:adjustViewBounds="true"
                android:elevation="2dp"
                android:src="@drawable/down_arrow"
                app:layout_constraintBottom_toBottomOf="@id/calendarDateEllipse"
                app:layout_constraintEnd_toEndOf="@id/calendarDateEllipse"
                app:layout_constraintStart_toStartOf="@id/calendarDateEllipse"
                app:layout_constraintTop_toTopOf="@id/calendarDateEllipse" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/calendarMovieImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/calendarMovieImageIndicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="140dp">

        <ImageView
            android:id="@+id/calendarMovieDurationIcon"
            android:layout_width="9dp"
            android:layout_height="13dp"
            android:src="@drawable/time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendarMovieDuration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendarMovieDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_light"
            android:text="@string/sample_duration"
            android:textColor="@color/colorOnPrimary"
            android:textSize="@dimen/textSizeSmallest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calendarMovieDurationIcon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/calendarMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/font_medium"
        android:text="@string/sample_title"
        android:textAlignment="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/calendarMovieRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:numStars="5"
        android:stepSize="0.1"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:rating="4.5"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:theme="@style/RatingBar"/>

    <TextView
        android:id="@+id/calendarMovieRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@string/font_light"
        android:text="@string/ave_personal_rating"
        android:textAlignment="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/textSizeSmallest" />

</LinearLayout>